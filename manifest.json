{
  "manifest_version": 3,
  "name": "JSON Hover Formatter",
  "version": "1.0",
  "description": "Hover over JSON text to format it in a modal or inline.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
